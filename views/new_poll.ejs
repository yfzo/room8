  <body>
    <% include ../partials/_header %>
  <!-- multistep form -->
  <form id="msform" action="/polls" method="POST">
    <!-- progressbar -->
    <ul id="progressbar">
      <li class="active">What do you want to find out?</li>
      <li>What are the options?</li>
      <li>Finalize Poll</li>
    </ul>
    <!-- fieldsets -->
    <fieldset>
      <h2 class="fs-title">What do you want to find out?</h2>
      <h3 class="fs-subtitle">Let's get started!</h3>
      <input type="text" name="question" placeholder="Question" required />
      <textarea type="text" name="description" placeholder="Description (Optional)"></textarea>
      <input type="button" name="next" class="next action-button" value="Next" />
    </fieldset>
    <fieldset id="options">
      <h2 class="fs-title">What are the options?</h2>
      <h3 class="fs-subtitle">Please list all of the rankable options below:</h3>
      <section class="options">
        <span class="optionInput"><input type="text" class="optionsInput" name="options" placeholder="An option" value=" " required/> <span class="close"><a href="#" class="close"></a></span></span>
        <span class="optionInput"><input type="text" class="optionsInput" name="options" placeholder="An option" value=" " required/> <span class="close"><a href="#" class="close"></a></span></span>
        <span class="optionInput"><input type="text" class="optionsInput" name="options" placeholder="An option" value=" " required/> <span class="close"><a href="#" class="close"></a></span></span>
      </section>
      <span class="flex plus"><a href="#" class="plusButton"><p class="plusButton">+</p></a></span>
      <input type="button" name="previous" class="previous action-button" value="Previous" />
      <input type="button" name="next" class="next action-button final" value="Next" />
    </fieldset>
    <fieldset id="confirmation">
      <h2 class="fs-title">Finalize Poll</h2>
      <h3 class="fs-subtitle">Please review details and confirm submission below:</h3>
      <p class="category">Question:</p>
      <p class="question">Empty.</p>
      <p class="category">Description:</p>
      <p class="description">Empty.</p>
      <p class="category options">Options:</p>
      <ul class="arrow"></ul>
      <br>
      <h3 class="fs-subtitle">Please enter the number of poll takers:</h3>
      <input type="number" name="numOfPeople" class="num" placeholder="1" value="2" />
      <br>
      <h3 class="fs-subtitle">Please enter your e-mail addresss:</h3>
      <input type="email" name="email" id="email" placeholder="youremail@email.com" value="youremail@email.com" required />
      <input type="button" name="previous" class="previous action-button" value="Previous" />
      <input type="submit" name="submit" class="submit action-button" value="Submit" />
    </fieldset>
  </form>
    <% include ../partials/_footer %>
  </body>
