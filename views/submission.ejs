

<!DOCTYPE html>
<html lang="en">
  <head>
    <title>Your Poll</title>

    <<link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
    <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" type="text/css" />
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet" integrity="sha384-wvfXpqpZZVQGK6TAh5PVlGOfQNHSoD2xbE+QkPxCAFlNEevoEH3Sl0sibVcOQVnN" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/css/uikit.min.css" />
    <link rel="stylesheet" href="/styles/header.css" type="text/css" />
    <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
    <link rel="stylesheet" href="/styles/footer.css" type="text/css" />
    <link rel="stylesheet" href="/styles/submissions.css" type="text/css" />
    <!-- Logo Font -->
    <link href="https://fonts.googleapis.com/css?family=Noto+Sans|Ubuntu&display=swap" rel="stylesheet">

    <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
    <script type="text/javascript" src="/scripts/app.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery-easing/1.3/jquery.easing.min.js"></script>
    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/sweetalert/2.1.2/sweetalert.min.js"></script>

    <!-- Charts.js-->
    <script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
  </head>

  <body>
    <% include ../partials/_header %>

    <main class="poll-container">

      <form id="new-submission" method="POST" action="/submissions/<%=submissionId%>">

        <div class="poll-header">
          <div id="poll-title">
            <h2><%=question%></h2>
          </div>
          <div id="poll-description">
            <h6><%=description%></h6>
          </div>
        </div>
        <h5>Please drag and drop to rank the following options:</h5>
        <div class="options">
          <div class="uk-child-width-1-2@s" uk-grid data-groups>
            <div class="answers" data-group="answers">
              <div uk-sortable="group: sortable-group">
                <% for (let option of options) { %>
                  <div class="uk-margin">
                    <div data-item class="uk-card uk-card-default uk-card-body uk-card-small"><%=option%></div>
                  </div>
                <% } %>
              </div>
            </div>
          </div>
        </div>
        <div class="submit-answers">
            <button type="submit" id="submit-answers">Submit!</button>
        </div>
      </form>
    </main>
    <% include ../partials/_footer %>
  </body>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/js/uikit.min.js"></script>
  <script src="https://cdnjs.cloudflare.com/ajax/libs/uikit/3.0.3/js/uikit-icons.min.js"></script>
  </html>
